{
    "manifest_version": 3,
    "name": "LIGION - Etsy Product Data Extractor",
    "version": "3.0",
    "description": "Extract product data from Etsy and export it to LIGION DATABASE or download product images to your computer.",
    "permissions": [
        "storage",
        "activeTab",
        "scripting",
        "downloads"
    ],
    "host_permissions": [
        "https://jmaqhuy.id.vn/*",
        "http://localhost:8080/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_title": "Product Data Extractor",
        "default_icon": {
            "16": "icons/icon16.png",
            "32": "icons/icon32.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "content_scripts": [
    {
      "matches": ["https://www.etsy.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ]
}